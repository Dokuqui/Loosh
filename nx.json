{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "defaultBase": "main",
  "projects": {
    "backend": {
      "root": "packages/backend/SmartHomeApi",
      "targets": {
        "build": {
          "executor": "@nx-dotnet/core:build",
          "options": {
            "project": "SmartHomeApi.csproj"
          }
        },
        "test": {
          "executor": "@nx-dotnet/core:test",
          "options": {
            "project": "SmartHomeApi.csproj"
          }
        }
      }
    },
    "frontend": {
      "root": "packages/frontend/smart-home-frontend",
      "targets": {
        "build": {
          "executor": "@nrwl/angular:build",
          "options": {
            "project": "smart-home-frontend"
          }
        },
        "serve": {
          "executor": "@nrwl/angular:serve",
          "options": {
            "project": "smart-home-frontend"
          }
        },
        "test": {
          "executor": "@nrwl/jest:jest",
          "options": {
            "jestConfig": "packages/frontend/smart-home-frontend/jest.config.ts"
          }
        }
      }
    }
  },
  "cli": {
    "defaultCollection": "@nrwl/workspace"
  },
  "targetDefaults": {
    "@angular-devkit/build-angular:browser": {
      "cache": true,
      "dependsOn": ["^build"],
      "inputs": ["default", "^default"]
    },
    "@nx/eslint:lint": {
      "cache": true,
      "inputs": [
        "default",
        "{workspaceRoot}/.eslintrc.json",
        "{workspaceRoot}/.eslintignore",
        "{workspaceRoot}/eslint.config.js"
      ]
    },
    "@nx/jest:jest": {
      "cache": true,
      "inputs": ["default", "^default", "{workspaceRoot}/jest.preset.js"],
      "options": {
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    }
  },
  "generators": {
    "@nx/angular:application": {
      "e2eTestRunner": "none",
      "linter": "eslint",
      "style": "sass",
      "unitTestRunner": "jest"
    }
  }
}
